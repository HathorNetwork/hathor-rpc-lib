{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "types": ["node", "jest"],
    "jsx": "react-jsx"
  },
  "exclude": [
    "__tests__/",
    "node_modules",
    "dist"
  ]
}

